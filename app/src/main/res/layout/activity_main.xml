<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/s4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="TextView" />

        <TextView
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="TextView" />

        <TextView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="TextView" />

        <TextView
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:textSize="@dimen/textSize"
            android:text="TextView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/ac"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                app:backgroundTint="?attr/red"
                android:background="@drawable/buton_shape"
                android:text="AC"
                android:textSize="@dimen/buttonTextSize" />

            <Button
                android:id="@+id/undo"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:text="Undo"
                android:textSize="@dimen/buttonTextSize" />

            <Button
                android:id="@+id/settings"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:text="Options"
                android:textSize="@dimen/buttonTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/pow"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="Y^X"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/rot"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="√" />

            <Button
                android:id="@+id/drop"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="DROP" />

            <Button
                android:id="@+id/swap"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="SWAP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n7"
                app:backgroundTint="@null"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="7" />

            <Button
                android:id="@+id/n8"
                app:backgroundTint="@null"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="8" />

            <Button
                android:id="@+id/n9"
                app:backgroundTint="@null"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="9" />

            <Button
                android:id="@+id/cls"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="?attr/red"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/buttonTextSize"
                android:text="CLS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n4"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="4" />

            <Button
                android:id="@+id/n5"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="5" />

            <Button
                android:id="@+id/n6"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="6" />

            <Button
                android:id="@+id/multi"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="×" />

            <Button
                android:id="@+id/divi"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n1"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="1" />

            <Button
                android:id="@+id/n2"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="2" />

            <Button
                android:id="@+id/n3"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="+" />

            <Button
                android:id="@+id/minus"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/n0"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="0" />

            <Button
                android:id="@+id/pm"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="+/-" />

            <Button
                android:id="@+id/dot"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/buttonTextSize"
                android:text="." />

            <Button
                android:id="@+id/enter"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:backgroundTint="@null"
                android:background="@drawable/buton_shape"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/buttonTextSize"
                android:text="Enter" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>