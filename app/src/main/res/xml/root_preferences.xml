<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/look_header"
        app:icon="@drawable/ic_appearance_icon">

        <ListPreference
            app:defaultValue="pink"
            app:entries="@array/scheme_entries"
            app:entryValues="@array/scheme_values"
            app:key="color_scheme"
            app:title="@string/look_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/numbers_header"
        app:icon="@drawable/ic_numbers_icon">


        <SeekBarPreference
            android:max="10"
            app:defaultValue="4"
            app:key="round_value"
            app:showSeekBarValue="true"
            app:title="@string/numbers_text" />

    </PreferenceCategory>

</PreferenceScreen>